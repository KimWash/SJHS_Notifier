<resources>

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">#F2F2F2</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColor">#909090</item>
        <item name="titleColor">#000000</item>
        <item name="bgColor">#F2F2F2</item>
        <item name="tileBG">#FCFCFC</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="colorPrimaryDark">#080808</item>
        <item name="bgColor">#080808</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColor">#999999</item>
        <item name="titleColor">#fafafa</item>
        <item name="tileBG">#252525</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/nbgb</item>
    </style>

</resources>
